{
  "version": 2,
  "builds": [
    {
      "src": "front-end/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "front-end/api/chat.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/chat.py" },
    { "src": "/(.*)", "dest": "/front-end/dist/index.html" }
  ],
  "build": {
    "env": {
      "NODE_VERSION": "18.x",
      "PYTHON_VERSION": "3.9"
    }
  }
}

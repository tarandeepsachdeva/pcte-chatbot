{
  "version": 2,
  "builds": [
    {
      "src": "vercel-build.js",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "front-end/dist"
      }
    },
    {
      "src": "front-end/api/chat.py",
      "use": "@vercel/python"
    },
    {
      "src": "front-end/api/test.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/chat.py" },
    { "src": "/(.*)", "dest": "/front-end/dist/$1" }
  ]
}

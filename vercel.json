{
  "version": 2,
  "builds": [
    {
      "src": "front-end/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm install && npm run build"
      }
    },
    {
      "src": "front-end/api/chat.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/chat.py" },
    { "src": "/(.*)", "dest": "/front-end/dist/$1" }
  ],
  "functions": {
    "front-end/api/chat.py": {
      "runtime": "python3.9"
    }
  }
}

{
  "version": 2,
  "buildCommand": "cd front-end && npm install && npm run build",
  "outputDirectory": "front-end/dist",
  "builds": [
    { "src": "front-end/api/chat.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/chat.py" },
    { "src": "/(.*)", "dest": "/front-end/dist/$1" }
  ]
}

{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "maxLambdaSize": "10mb"
      }
    },
    {
      "src": "api/chat.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "memory": 3008
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/chat.py" },
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "PYTHON_VERSION": "3.9"
  }
}